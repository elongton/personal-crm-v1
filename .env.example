# API
PORT=3000
APP_BASE_URL=http://localhost:3000
DB_MODE=mock
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/app

# OAuth / Google
GOOGLE_AUTH_MODE=mock
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback
GOOGLE_OAUTH_SCOPE="openid email profile https://www.googleapis.com/auth/gmail.readonly https://www.googleapis.com/auth/calendar.readonly"
TOKEN_ENCRYPTION_KEY=replace-with-32-byte-base64-or-passphrase

# Scheduler
ENABLE_DAILY_SCHEDULER=false
DAILY_SYNC_INTERVAL_MS=86400000
DEFAULT_TENANT_ID=00000000-0000-0000-0000-000000000001
