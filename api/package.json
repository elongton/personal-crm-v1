{
  "name": "api",
  "private": true,
  "scripts": {
    "dev": "npm run dev:sqlite",
    "dev:sqlite": "cross-env DATABASE_URL=file:./prisma/dev.db npm run prisma:generate:sqlite && cross-env DATABASE_URL=file:./prisma/dev.db npm run prisma:db:push:sqlite && cross-env DATABASE_URL=file:./prisma/dev.db tsx watch src/server.ts",
    "dev:postgres": "tsx watch src/server.ts",
    "lint": "tsc --noEmit -p tsconfig.json",
    "build": "tsc -p tsconfig.json",
    "test": "tsx --test test/**/*.test.ts",
    "start": "node dist/server.js",
    "seed:mock": "tsx src/scripts/seedMockData.ts",
    "prisma:generate": "prisma generate",
    "prisma:generate:sqlite": "prisma generate --schema prisma/schema.sqlite.prisma",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:migrate:baseline": "prisma db execute --schema prisma/schema.prisma --file prisma/migrations/0001_crm_v1.sql",
    "prisma:migrate:status": "prisma migrate status",
    "prisma:db:push:sqlite": "prisma db push --schema prisma/schema.sqlite.prisma"
  },
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "fastify": "^4.28.1",
    "prisma": "^5.20.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "cross-env": "^10.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.6.0"
  }
}
